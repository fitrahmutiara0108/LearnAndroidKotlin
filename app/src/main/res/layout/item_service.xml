<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btnServiceMenu"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/ivServiceMenu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_livinmandiri"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvServiceMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/ivServiceMenu"
        app:layout_constraintStart_toStartOf="@id/ivServiceMenu"
        app:layout_constraintEnd_toEndOf="@id/ivServiceMenu"/>

</androidx.constraintlayout.widget.ConstraintLayout>